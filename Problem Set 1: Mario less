#include <stdio.h>

int main() {
    int brick_rows;

    do {
        printf("Unesite broj redova cigle (između 1 i 8): ");
        scanf("%d", &brick_rows);

        if (brick_rows <= 0 || brick_rows >= 9) {
            printf("Neispravan unos. Molimo unesite broj između 1 i 8.\n");
        }
    } while (brick_rows <= 0 || brick_rows >= 9);

    for (int i = 0; i < brick_rows; i++) {
        for (int j = 0; j < brick_rows; j++) {
            if (j < brick_rows - i - 1) {
                printf(" ");
            } else {
                printf("#");
            }
        }
        printf("\n");
    }

    return 0;
}
